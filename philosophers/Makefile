#===================================
#|         COMPILATION            |#
#===================================
CC = cc
CFLAGS = -Wall -Wextra -Werror -g

#===================================
#|         DIRECTORIE             |#
#===================================
SRCS_DIR = sources

#===================================
#|         FILES                  |#
#===================================
SRCS =		main.c \
			init.c \
			philosopher_routine.c \
			monitor.c \
			utils.c \
			utils2.c \

OBJS = $(addprefix $(SRCS_DIR)/, $(SRCS:.c=.o))
NAME = philo

#===================================
#|         RULES                  |#
#===================================
all: $(NAME)
		@echo "                                                                                           "
		@echo "\033[31m        (        )  (    (        )   (       )   (        )       (    (       \033[0m"
		@echo "\033[31m        (        )  (    (        )   (        )   (        )       (    (      \033[0m"
		@echo "\033[31m        )\ )  ( /(  )\ ) )\ )  ( /(   )\ )  ( /(   )\ )  ( /(       )\ ) )\ )   \033[0m"
		@echo "\033[31m       (()/(  )\())(()/((()/(  )\()) (()/(  )\()) (()/(  )\()) (   (()/((()/(   \033[0m" 
		@echo "\033[31m        /(_))((_)\  /(_))/(_))((_)\   /(_))((_)\   /(_))((_)\  )\   /(_))/(_)) \033[0m" 
		@echo "\033[33m        (_))   _((_)(_)) (_))    ((_) (_))    ((_) (_))   _((_)((_) (_)) (_))   \033[0m"
		@echo "\033[32m####  | _ \ | || ||_ _|| |    / _ \ / __|  / _ \ | _ \ | || || __|| _ \/ __|    ####\033[0m"
		@echo "\033[32m####  |  _/ | __ | | | | |__ | (_) |\__ \ | (_) ||  _/ | __ || _| |   /\__ \    ####\033[0m"
		@echo "\033[32m####  |_|   |_||_||___||____| \___/ |___/  \___/ |_|   |_||_||___||_|_\|___/    ####\033[0m"

                                                                             
	
$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

$(SRCS_DIR)/%.o: $(SRCS_DIR)/%.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
